{
  "manifest_version": 2,

  "name": "Facewatch",
  "description": "Control how much time you spend on facebook",
  "version": "0.2",

  "background": {
    "scripts": ["js/facewatch.js"]
  },

  "permissions": [
    "webNavigation", "tabs", "storage", "unlimitedStorage"
  ],

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/facewatch.html"
  }
}
